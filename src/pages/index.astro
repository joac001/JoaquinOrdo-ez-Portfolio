---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import presentation from "../../public/assets/presentation.png";
import Menu from "../components/Menu.jsx";
import Displayer from "../components/Displayer.jsx";
---

<Layout title="Portfolio">
	<main
		class="grid grid-cols-2 grid-rows-auto gap-y-8 gap-x-4 p-4 font-sans select-none"
	>
		<span
			class="flex h-80 w-auto justify-center items-start overflow-hidden"
		>
			<Image src={presentation} alt="presentation-gif" loading="eager" />
		</span>
		<span class="flex flex-col justify-evenly gap-y-10 items-start">
			<span class="grid grid-rows-2">
				<h1
					class="self-end text-white sm:text-6xl text-2xl transition-all ease-in-out duration-300"
				>
					Hello, I'm
				</h1>

				<h1
					class="[text-shadow:_0px_0px_15px_#00BCD4] text-primary font-bold sm:text-8xl text-4xl"
				>
					Joaquin
				</h1>
			</span>

			<Menu client:load />
		</span>
		<Displayer client:load />
	</main>
</Layout>
